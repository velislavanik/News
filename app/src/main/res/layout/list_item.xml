<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:orientation="vertical"
    android:paddingEnd="@dimen/left_right"
    android:paddingLeft="@dimen/left_right"
    android:paddingRight="@dimen/left_right"
    android:paddingStart="@dimen/left_right">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_bottom">

        <TextView
            android:id="@+id/section"
            android:layout_width="@dimen/news_widht"
            android:layout_height="@dimen/news_height"
            android:layout_gravity="center_vertical"
            android:background="@color/textColorTitle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size"
            tools:text="@string/test" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/date_text_size"
            tools:text="@string/test" />

    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textColor="@color/textColorTitle"
        android:textSize="@dimen/name_text_size"
        tools:text="@string/test" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_bottom"
        android:maxLines="1"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/date_text_size"
        tools:text="@string/test" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginBottom="@dimen/line_margin_bottom"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginBottom="@dimen/line_margin_bottom"
        android:background="@android:color/darker_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@android:color/darker_gray" />

</LinearLayout>
